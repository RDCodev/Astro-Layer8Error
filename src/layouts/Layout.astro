---
import Header from 'src/ui/Header.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/styles/global.css">
    <title>{ title }</title>
  </head>
  <body class="bg-woodsmoke-950 w-screen h-screen">
    <Header/>
    <main class="relative w-auto min-h-max max-h-full">
      <slot />
    </main>
  </body>
</html>